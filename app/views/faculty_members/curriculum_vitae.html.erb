<div class='main_content'>
  <h2>Curriculum Vitae</h2>

  <h3>Education</h3>
    <% @degrees.each do |degree| %>
      <div class='cv-output'>
        <strong><%= degree.institution %></strong><br />
        <%= degree.title %> <%= degree.field_of_study %>
        <p class='dates'>
          <%= Date::MONTHNAMES[degree.issue_date.month] %> <%= degree.issue_date.year %>
        </p>
      </div>
    <% end %>
  <hr>

  <h3>Employment</h3>
    <% @employments.each do |employment| %>
      <div class='cv-output'>
        <strong>
        	<%= employment.company %>
        </strong>
        <br />
        <%= employment.position %>
        <% ending_date = employment.end_date.blank? ? 'Present' : "#{Date::MONTHNAMES[employment.end_date.month]} #{employment.end_date.year}" %>
        <p class='dates'>
        <%= Date::MONTHNAMES[employment.start_date.month] %> <%= employment.start_date.year %> -
        <%= ending_date %>
        </p>
        <%= employment.summary %>
      </div>
    <% end %>
  <hr>

  <h3>Publications</h3>
    <% @publications.each do |publication| %>
      <div class='cv-output'>
        <strong>
        	<%= publication.title %>
        </strong>
        <p class='dates'>
          <%= publication.year %>
        </p>
        <%= publication.summary %>
      </div>
    <% end %>
  <hr>

  <h3>Research</h3>
    <% @researches.each do |research| %>
        <div class='cv-output'>
          <strong>
            <%= research.topic %>
          </strong>
          <br />
          <% ending_date = research.end_date.blank? ? 'Present' : "#{Date::MONTHNAMES[research.end_date.month]} #{research.end_date.year}" %>
          <p class='dates'>
            <%= Date::MONTHNAMES[research.start_date.month] %> <%= research.start_date.year %> - 
            <%= ending_date %>
          </p>
        </div>
    <% end %>
  <hr>

  <h3>Awards</h3>
    <% @awards.each do |award| %>
      <div class='cv-output'>
        <strong>
         <%= award.title %>
        </strong>
        <br />
        <%= award.issuer %>
        <p class='dates'>
          <%= Date::MONTHNAMES[award.issue_date.month] %> <%= award.issue_date.year %>
        </p>
        <%= award.summary %>
      </div>
  <% end %>
</div>