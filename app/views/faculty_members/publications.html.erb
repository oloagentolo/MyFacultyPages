<div class='main_content'>
  <h2>Publications</h2>
  <table class='table table-bordered'>
    <tr>
      <th class='span2'>Cover</th>
      <th>Information</th>
    </tr>

    <% @publications.each do |publication| %>
      <tr>
        <td class='span2'>
          <% image_path = publication.image_url.blank? ? 'UA-logo-red.png' : publication.image_url %>
          <%= image_tag(image_path, :class => 'img-index') %>
        </td>
        <td>
        	<strong><%= publication.title %></strong>
        	<p><i><%= @faculty_member.first_name %> <%= @faculty_member.last_name %></i></p>
        	<p>
            <%= publication.summary %>
            <% if signed_in? %>
            <br/>
            <%= link_to 'Edit', edit_publication_path(publication) %> <%= link_to 'Remove', publication, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </p>
        </td>
      </tr>
    <% end %>
  </table>
  <%= link_to 'Add publication', new_publication_path if signed_in? %>
</div>
