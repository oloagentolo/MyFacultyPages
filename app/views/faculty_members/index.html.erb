<div class='main_content'>
  <h2>Computer Science Faculty</h2>
  <table class='table table-bordered'>
    <tr>
      <th class='span2'>Photo</th>
      <th>Information</th>
      <th class='span4'>Contact Details</th>
    </tr>

    <% @faculty_members.each do |member| %>
      <tr>
        <td class='span2'>
          <%= image_tag('UA-logo-red.png', :class => 'img-index') %>
        </td>
        <td>
          <strong><%= member.first_name %> <%= member.last_name %></strong><br />
          <%= member.position %><br />
          <% member.degrees.each do |degree| %>
            <%= degree.title %> <%= degree.field_of_study %>, <%= degree.institution %><br />
          <% end %>
            Software Development Practices, Software Engineering Principles<br />
          <%= link_to 'Website', faculty_member_path(member) %>
        </td>
        <td class='span4'>
          Office: <%= member.office %><br />
          Phone: (<%= member.phone.to_s[0..2] %>) <%= member.phone.to_s[3..5] %>-<%= member.phone.to_s[6..9] %><br />
          Email: <%= member.email %>
        </td>
      </tr>
    <% end %>
  </table>
</div>