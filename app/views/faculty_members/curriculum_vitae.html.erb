<div class='main_content'>
  <h2>Curriculum Vitae</h2>

  <h4>Education</h4>
  <ul>
    <% @degrees.each do |degree| %>
      <li>
        <p>
          <strong>
            <%= degree.title %> <%= degree.field_of_study %> (<%= degree.issue_date.year %>),
          </strong>
          <%= degree.institution %>
        </p>
      </li>
    <% end %>
  </ul>
  <hr>

  <h4>Employment</h4>
  <ul>
    <% @employments.each do |employment| %>
      <li>
        <p>
          <strong>
        	  <%= employment.company %>
          </strong>
          <br />
          <%= employment.position %>, 

          <% ending_date = employment.end_date.blank? ? 'Present' : "#{employment.end_date.month}/#{employment.end_date.year}" %>
          <%= employment.start_date.month %>/<%= employment.start_date.year %> -
          <%= ending_date %><br />
          <%= employment.summary %>
        </p>
      </li>
    <% end %>
  </ul>
  <hr>

  <h4>Publications</h4>
  <ul>
    <% @publications.each do |publication| %>
      <li>
        <p>
          <strong>
        	  <%= publication.title %> (<%= publication.year %>)
          </strong>
          <br />
          <%= publication.summary %>
        </p>
      </li>
    <% end %>
  </ul>
  <hr>

  <h4>Research</h4>
  <ul>
    <% @researches.each do |research| %>
      <li>
        <p>
          <strong>
            <%= research.topic %>
          </strong>
          <br />
          <% ending_date = research.end_date.blank? ? 'Present' : "#{research.end_date.month}/#{research.end_date.year}" %>

          <%= research.start_date.month %>/<%= research.start_date.year %> - 
          <%= ending_date %>
        </p>
      </li>
    <% end %>
  </ul>
</div>