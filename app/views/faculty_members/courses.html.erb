<div class='main_content'>
  <h2>Courses</h2>
  <% @courses.each do |course| %>
    <strong>
      <%= course.dept_code %> <%= course.course_no %>: <%= course.name %>
    </strong>
    <p class='dates'>
      <%= course.term %> <%= course.year %>
    </p>
    <p>
    <%= course.summary %>
    </p>
    <%= link_to 'Edit', edit_course_path(course) if signed_in? %> 
    <%= link_to 'Remove', course, method: :delete, data: { confirm: 'Are you sure?' } %>
    <hr>
  <% end %>
  <%= link_to 'Add course', new_course_path %>
</div>
